<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:wills_blackboards/Resources/Private/Language/locallang_be.xlf:settings.wills_blackboards.sheettitle</sheetTitle>
                </TCEforms>
                <el>
                    <!-- A select of categories for the parent category of blackboards -->
                    <settings.blackboardsParentCategorie>
                        <TCEforms>
                              <label>LLL:EXT:wills_blackboards/Resources/Private/Language/locallang_be.xlf:settings.wills_blackboards.category_label</label>
                              <config>
                                 <type>select</type>
                                 <renderMode>tree</renderMode>
                                 <renderType>selectTree</renderType>
                                 <treeConfig>
                                    <parentField>parent</parentField>
                                    <appearance>
                                       <maxLevels>99</maxLevels>
                                       <expandAll>TRUE</expandAll>
                                       <showHeader>TRUE</showHeader>
                                    </appearance>
                                 </treeConfig>
                                 <foreign_table>sys_category</foreign_table>
                                 <foreign_table_where>AND (sys_category.sys_language_uid = 0 OR sys_category.l10n_parent = 0) ORDER BY sys_category.sorting</foreign_table_where>
                                 <size>15</size>
                                 <minitems>0</minitems>
                                 <maxitems>1</maxitems>
                              </config>
                        </TCEforms>
                    </settings.blackboardsParentCategorie>
                    <!-- Page with the Show plugin -->
                    <settings.blackboardsUidViewPage>
                        <TCEforms>
                            <label>LLL:EXT:wills_blackboards/Resources/Private/Language/locallang_be.xlf:settings.wills_blackboards.view_page_uid_label</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.blackboardsUidViewPage>

                    <!-- Page with the New plugin -->
                    <settings.blackboardsUidNewPage>
                        <TCEforms>
                            <label>LLL:EXT:wills_blackboards/Resources/Private/Language/locallang_be.xlf:settings.wills_blackboards.new_page_uid_label</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.blackboardsUidNewPage>

                    <!-- Page with the List plugin -->
                    <settings.blackboardsUidListPage>
                        <TCEforms>
                            <label>LLL:EXT:wills_blackboards/Resources/Private/Language/locallang_be.xlf:settings.wills_blackboards.list_page_uid_label</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.blackboardsUidListPage>

                    <!-- Input type to set the email for the notification of a new Idea -->
                    <settings.blackboardsEmailNotification>
                        <TCEforms>
                            <label>LLL:EXT:wills_blackboards/Resources/Private/Language/locallang_be.xlf:settings.wills_blackboards.task_label</label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.blackboardsEmailNotification>

                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
